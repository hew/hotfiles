{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    // Fill in globals here obviously.
  },
  "plugins": [
    "react",
    "import"
  ],
  "rules": {
    "strict": 0,
    "comma-dangle": [2, "always-multiline"],
    "no-cond-assign": 0,
    "no-console": 0,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": 0,
    "no-extra-semi": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "valid-jsdoc": [
      2,
      {
        "prefer": {
          "return": "returns"
        },
        "requireParamDescription": false,
        "requireReturn": false,
        "requireReturnDescription": false
      }
    ],
    "valid-typeof": 2,
    // Best Practices
    "block-scoped-var": 1,
    "curly": 1,
    "default-case": 1,
    "dot-location": [
      1,
      "property"
    ],
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 1,
    "max-len": [1, 160],
    "no-alert": 2,
    "no-caller": 1,
    "no-compare-neg-zero": 2,
    "no-constant-condition": 1,
    "no-else-return": 1,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 1,
    "no-floating-decimal": 2,
    "no-implicit-coercion": [
      1,
      {
        "boolean": true,
        "number": true,
        "string": true
      }
    ],
    "no-implied-eval": 2,
    "no-invalid-this": 0,
    "no-loop-func": 0,
    "no-multi-spaces": [
      1,
      {
        "ignoreEOLComments": true,
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-multi-str": 1,
    "no-global-assign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-param-reassign": 0,
    "no-redeclare": 1,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTernary": false
      }
    ],
    "no-useless-concat": 1,
    "no-useless-escape": 1,
    "no-void": 2,
    "no-warning-comments": 0,
    "no-with": 1,
    "no-cap": 0,
    "radix": 2,
    "vars-on-top": 0,
    "wrap-iife": 2,
    "yoda": [
      2,
      "never",
      {
        "exceptRange": true
      }
    ],
    // Variables
    "no-shadow": 1,
    "no-undef": 2,
    "no-undefined": 0,
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": true,
        "varsIgnorePattern": "^rest",   // ignore destructured {x, y, ...rest} args
        "argsIgnorePattern": "^_"
      }
    ],
    "no-use-before-define": 2,
    // Stylistic Issues
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": [
      1,
      {
        "properties": "always"
      }
    ],
    "comma-spacing": 1,
    "comma-style": [
      1,
      "last"
    ],
    "consistent-return": 0,
    "consistent-this": [
      1,
      "self"
    ],
    "eol-last": 2,
    "func-call-spacing": [
      2,
      "never"
    ],
    "key-spacing": 1,
    "lines-around-comment": [
      0,
      {
        "beforeBlockComment": true,
        "beforeLineComment": true
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "max-nested-callbacks": [
      2,
      4
    ],
    "new-cap": 0,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": [
      1,
      "smart-tabs"
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1
      }
    ],
    "no-nested-ternary": 0,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "array-bracket-spacing": [
      1,
      "never"
    ],
    "object-curly-spacing": [
      1,
      "never"
    ],
    "space-in-parens": [
      1,
      "never"
    ],
    "one-var": [
      1,
      "never"
    ],
    "padded-blocks": [
      1,
      {
        "blocks": "never",
        "switches": "never",
        "classes": "always"
      }
    ],
    "padding-line-between-statements": [
      1,
      {"blankLine": "always", "prev": "*", "next": ["return", "multiline-block-like"]},
      {"blankLine": "always", "prev": ["const", "let", "var"], "next": "*"},
      {"blankLine": "any", "prev": ["const", "let", "var"], "next": ["const", "let", "var"]},
      {"blankLine": "always", "prev": "directive", "next": "*"},
      {"blankLine": "any", "prev": "directive", "next": "directive"}
    ],
    "no-var": 1,
    "quote-props": [
      1,
      "as-needed"
    ],
    "quotes": [
      1,
      "single"
    ],
    "semi": [
      1,
      "always"
    ],
    "semi-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": 1,
    "space-before-function-paren": [
      1,
      "never"
    ],
    "space-infix-ops": 1,
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": false,
        "overrides": {
          "import": { "after": true },
          "let": { "after": true },
          "const": { "after": true },
          "this": { "before": true },
          "else": { "after": true },
          "return": { "after": true },
          "do": { "after": true },
          "as": { "before": true },
          "from": {
            "after": true,
            "before": true
          },
          "throw": { "after": true },
          "try": { "after": true },
          "case": { "after": true }
        }
      }
    ],
    "space-unary-ops": 1,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        }
      }
    ],
    // Node
    "callback-return": [
      1,
      [
        "callback",
        "cb",
        "next"
      ]
    ],
    "handle-callback-err": 1,
    "no-mixed-requires": 0,
    // ES6
    "arrow-parens": 0,
    "arrow-spacing": [
      1,
      {
        "before": true,
        "after": true
      }
    ],
    "constructor-super": 1,
    "generator-star-spacing": [
      1,
      "after"
    ],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-confusing-arrow": [1,
      {
        "allowParens": true
      }
    ],
    "no-this-before-super": 2,
    "object-shorthand": [
      0,
      "always"
    ],
    "prefer-const": 0,
    "prefer-spread": 1,
    "require-yield": 1,
    "template-curly-spacing": [
      1,
      "never"
    ],
    // Import
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    // React + JSX
    "jsx-quotes": 1,
    "react/jsx-key": 1,
    "react/jsx-no-comment-textnodes": 2,
    "react/jsx-pascal-case": 2,
    "react/jsx-no-bind": [
      1,
      {
        "ignoreRefs": true,
        "allowArrowFunctions": true
      }
    ],
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-undef": [
      2,
      {
        "allowGlobals": true
      }
    ],
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/jsx-wrap-multilines": 1,
    "react/jsx-equals-spacing": [
      1,
      "never"
    ],
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-indent-props": [
      2,
      2
    ],
    "react/jsx-boolean-value": [
      1,
      "always"
    ],
    "react/jsx-closing-bracket-location": [
      1,
      "after-props"
    ],
    "react/jsx-curly-spacing": [
      1,
      {
        "when": "never",
        "children": true
      }
    ],
    "react/jsx-max-props-per-line": [
      1,
      {
        "when": "multiline"
      }
    ],
    "react/jsx-space-before-closing": [
      2,
      "always"
    ],
    "react/jsx-tag-spacing": [
      1,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never"
      }
    ],
    "react/no-array-index-key": 1,
    "react/no-direct-mutation-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-is-mounted": 1,
    "react/no-multi-comp": 1,
    "react/no-redundant-should-component-update": 2,
    "react/no-typos": 2,
    "react/no-unknown-property": 1,
    "react/no-unused-prop-types": 1,
    "react/no-unescaped-entities": 1,
    "react/prefer-es6-class": 1,
    "react/prefer-stateless-function": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    //"react/require-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/require-default-props": 2,
    "react/require-render-return": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": [
      1,
      {
        "order": [
          "constructor",
          "lifecycle",
          "everything-else",
          "render"
        ],
        "groups": {
          "lifecycle": [
            "displayName",
            "mixins",
            "statics",
            "contextTypes",
            "childContextTypes",
            "propTypes",
            "defaultProps",
            "state",
            "constructor",
            "getChildContext",
            "getDefaultProps",
            "getInitialState",
            "componentWillMount",
            "componentDidMount",
            "componentWillReceiveProps",
            "shouldComponentUpdate",
            "componentWillUpdate",
            "componentDidUpdate",
            "componentWillUnmount"
          ]
        }
      }
    ],
    "react/style-prop-object": 1,
    "react/void-dom-elements-no-children": 1
  }
}
